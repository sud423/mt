@{
    ViewData["Title"] = "我爱果庄";
    
    int l = Model.Count();
    int row = l / 3;
}

@model IEnumerable<Category>

<div class="carousel">
    <img src="~/images/ba.jpg" class="img-responsive" />
</div>

<partial name="_Nav" />

<div id="app">
    <h4 class="container" style="font-weight:bold;">兴趣小组……</h4>

    @for (int r = 0; r < row; r++)
    {
        <div class="row">
            @for (int i = r * 3; i < ((r + 1) * 3 > l ? l : (r + 1) * 3); i++)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <a asp-action="interestgroup" asp-route-id="@(Model.ElementAt(i)?.Id)"><img class="img-responsive" src="@(Model.ElementAt(i)?.SmallPic)" alt="@(Model.ElementAt(i)?.Name)" /></a>
                    </div>
                    <div class="panel-footer font-space">
                        <a asp-action="interestgroup" asp-route-id="@(Model.ElementAt(i)?.Id)">@(Model.ElementAt(i)?.Name)</a>
                    </div>
                </div>
            }
        </div>
    }

    <div class="row text-center">
        <a asp-area="" asp-action="group" class="more">查看更多……</a>
    </div>

</div>