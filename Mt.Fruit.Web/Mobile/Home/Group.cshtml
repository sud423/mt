@{
    ViewData["Title"] = "我爱果庄，兴趣小组";

    int l = Model.Count();
    int rw = l / 3;

    int row = l % 3 == 0 ? rw : rw + 1;
}

@model IEnumerable<Category>

<partial name="_Nav" />

<div id="app">
    <h4 class="container" style="font-weight:bold;">兴趣小组……</h4>

    @for (int r = 0; r < row; r++)
    {
        <div class="row">
            @for (int i = r * 3; i < ((r + 1) * 3 > l ? l : (r + 1) * 3); i++)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <a asp-action="interestgroup" asp-route-id="@(Model.ElementAt(i)?.Id)">
                            @switch (Model.ElementAt(i).Id)
                            {
                                case 17:
                                case 26:
                                    <img class="img-responsive" style="height:80px;" src="@(Model.ElementAt(i)?.SmallPic)" alt="@(Model.ElementAt(i)?.Name)" />
                                    break;
                                case 23:
                                case 24:
                                    <img class="img-responsive" style="height:85px;" src="@(Model.ElementAt(i)?.SmallPic)" alt="@(Model.ElementAt(i)?.Name)" />
                                    break;
                                default:
                                    <img class="img-responsive" src="@(Model.ElementAt(i)?.SmallPic)" alt="@(Model.ElementAt(i)?.Name)" />
                                    break;
                            }


                        </a>
                    </div>
                    <div class="panel-footer font-space">
                        <a asp-action="interestgroup" asp-route-id="@(Model.ElementAt(i)?.Id)">@(Model.ElementAt(i)?.Name)</a>
                    </div>
                </div>
            }
        </div>
    }

</div>