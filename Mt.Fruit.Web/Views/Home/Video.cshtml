@{
    ViewData["Title"] = "我爱果庄，水果视频";
}

<div class="container" style="margin-bottom:120px;">

    <div class="row">
        <div class="col-md-5">
            <h3>水果视频……</h3>
        </div>
        <div class="col-md-7 text-right"
                style="display: inline; line-height: 56px; height: 56px;">
            <form class="form-inline">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" id="exampleInputAmount"
                                placeholder="搜索感兴趣的水果……">
                        <div class="input-group-addon">

                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="new" asp-action="resource" asp-controller="my">上传视频</a>
        </div>
    </div>
    <div class="row" id="list" style="margin-top:20px;">

    </div>
    <div class="videos">
    </div>
    <div id="example" style="display:none;">
        <div class="thumbnail text-center">
            <video class="img-responsive" src="{0}" id="{2}" onclick="read({2})">
            </video>

            <div class="caption text-center">
                <p>{1}</p>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script src="~/js/bootstrap-paginator.js" type="text/javascript"></script>
    <script type="text/javascript">
        categoryId = 44;
        getResource(1,36);
    </script>
}