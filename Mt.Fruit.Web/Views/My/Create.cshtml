@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_KindeditorScriptsPartial" />

    <script>
        KindEditor.ready(function(K) {
            window.editor = K.create('#editor_id', {
                uploadJson : "@Url.Action("Upload","Oss")",
                pasteType: 1,
                filePostName: "file",
                //allowImageRemote:false
            });
        });
    </script>
}