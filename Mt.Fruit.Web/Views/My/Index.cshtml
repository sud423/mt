@{
    ViewBag.Title = "我爱果庄，我的-分类";
}


<div class="container" style="padding:20px; margin-bottom:120px;background:#fff;">

    <div class="row">
        <partial name="_Nav" />

        <div class="col-sm-8 col-sm-offset-1">
            <ol class="breadcrumb">
                <li><a asp-action="index">我的</a></li>
                <li class="active">分类</li>
            </ol>
            <table class="table table-bordered table-striped table-hover my">
                <thead>
                    <tr>
                        <th style="width:20%">分类名称</th>
                        <th>关注人数</th>
                        <th style="width: 55%">描述</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody id="list">
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4">
                            <nav class="text-left">
                                <!--text-right 右对齐，bootstrap中样式-->
                                <ul class="pagination"></ul>
                            </nav>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>


</div>

@section Scripts{
    <script src="~/js/bootstrap-paginator.js"></script>
    <script type="text/javascript">
        getCategoryPage(1);
    </script>
}