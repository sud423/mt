@{
    ViewBag.Title = ViewBag.Other + "，我爱上课";
}

@model IEnumerable<Article>
<div class="row region" style="margin-bottom: 113px;">
    <div class="container">
        <h2 class="col-lg-12 text-center"
            style="font-size: 49px; margin: 5px 0px 55px">
            <strong>@ViewBag.Other</strong>
        </h2>
        <div class="col-lg-12">
            <table class="table table-striped">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @switch (ViewBag.Other)
                            {
                                case "近期开课":
                                    <a href="/detail/@(item.Id)">@(item.Title)</a>
                                    break;
                                case "活动预告":
                                    <a href="/announce/@(item.Id)">@(item.Title)</a>
                                    break;
                                default:
                                    <a href="/news/@(item.Id)">@(item.Title)</a>
                                    break;
                            }
                        </td>
                        <td align="right">@(item.CreatedAt.ToString("yyyy-MM-dd"))</td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>