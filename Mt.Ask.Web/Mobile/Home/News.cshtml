@{
    ViewBag.Title = ViewBag.Other + "，我爱上课";
}

@model IEnumerable<Article>

<partial name="_Nav" />

<div class="row">
    <div class="container">
        <h2 class="col-lg-12 title">
            <strong>其它</strong>
        </h2>
        <div class="row qt mb-25">
            <h4>@ViewBag.Other</h4>
            <dl>
                @foreach (var item in Model)
                {
                <dt>
                    @switch (ViewBag.Other)
                    {
                        case "近期开课":
                            <a href="/detail/@(item.Id)"
                               title="@(item.Title)">@(item.Title)</a>
                            <span>@(item.CreatedAt.ToString("yyyy-MM-dd"))</span>
                            break;
                        case "活动预告":
                            <a href="/detail/@(item.Id)"
                               title="@(item.Title)">@(item.Title)</a>
                            <span>@(item.CreatedAt.ToString("yyyy-MM-dd"))</span>
                            break;
                        default:
                            <a href="/detail/@(item.Id)"
                               title="@(item.Title)">@(item.Title)</a>
                            <span>@(item.CreatedAt.ToString("yyyy-MM-dd"))</span>
                            break;
                    }
                </dt>
                }
            </dl>
        </div>
    </div>
</div>
